<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_c_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_b"
        app:layout_constraintBottom_toBottomOf="@+id/iv_c"
        app:layout_constraintLeft_toLeftOf="@+id/iv_c"
        app:layout_constraintRight_toRightOf="@+id/iv_c"
        app:layout_constraintTop_toTopOf="@+id/iv_c" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启笔记"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_c_a"
        app:layout_constraintLeft_toLeftOf="@+id/iv_c"
        app:layout_constraintRight_toRightOf="@+id/iv_c" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_bt"
        android:text="智能笔管理"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_c"
        app:layout_constraintRight_toRightOf="@+id/iv_c"
        app:layout_constraintTop_toBottomOf="@+id/iv_c" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_mePen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_bt"
        android:text="我的笔迹"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_c"
        app:layout_constraintRight_toRightOf="@+id/iv_c"
        app:layout_constraintTop_toBottomOf="@+id/bt_manage" />


</android.support.constraint.ConstraintLayout>

