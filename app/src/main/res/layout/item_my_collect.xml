<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_efeff3">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_note_img"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="2017/07/15 20:00"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/item_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:src="@drawable/icon_collect_img_normal" />

            <ImageView
                android:id="@+id/item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_share_img" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_paint_img_src" />

        <FrameLayout
            android:id="@+id/item_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/item_video_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_paint_img_src"
                android:src="#96000000" />

            <ImageView
                android:id="@+id/item_startVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_video_img" />

        </FrameLayout>

        <TextView
            android:id="@+id/item_content"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:text="随手绘画，哈哈哈哈啥好说的哈哈收到回复哈士大夫哈师大"/>
    </LinearLayout>
</LinearLayout>
